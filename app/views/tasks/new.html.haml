
= form_with model: @tasks, url: {action: "create"},local: true do |form|
  -if @tasks.errors.any?
    -@tasks.errors.full_messages.each do |messages|
      %br
      = messages
  = form.label :name
  = form.text_field :name
  %br
  = form.label :body
  = form.text_area :body
  %br
  =form.label :status
  =form.check_box :status
  %br
  =form.hidden_field :tasklist_id, value:1
  %br
  = form.submit